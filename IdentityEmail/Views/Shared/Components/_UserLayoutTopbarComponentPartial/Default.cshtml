<style>
    header.topbar {
        background: linear-gradient(90deg, #0f172a 0%, #1e293b 50%, #0f172a 100%) !important;
        border-bottom: 1px solid rgba(99, 102, 241, 0.3) !important;
    }

    header.topbar nav.top-navbar,
    header.topbar .navbar,
    header.topbar .navbar-collapse {
        background: transparent !important;
    }

    header.topbar .navbar-brand,
    header.topbar .navbar-brand .logo,
    header.topbar .navbar-brand .logo-text {
        color: #e9d5ff !important;
    }

    header.topbar .nav-link {
        color: #c4b5fd !important;
    }

    header.topbar .nav-link:hover {
        color: #e9d5ff !important;
    }

    header.topbar .pro-name,
    header.topbar .pro-name span {
        color: #e9d5ff !important;
    }

    header.topbar .app-search input {
        background: rgba(15, 23, 42, 0.9) !important;
        border: 1px solid rgba(99, 102, 241, 0.3) !important;
        color: #e9d5ff !important;
    }

    header.topbar .app-search input::placeholder {
        color: #94a3b8 !important;
    }

    header.topbar i[data-feather] {
        color: #c4b5fd !important;
    }

    header.topbar .dropdown-menu {
        background: #1e293b !important;
        border: 1px solid rgba(99, 102, 241, 0.3) !important;
    }
</style>

<header class="topbar" style="background: linear-gradient(90deg, #0f172a 0%, #1e293b 50%, #0f172a 100%) !important; border-bottom: 1px solid rgba(99, 102, 241, 0.3) !important;">
    <nav class="navbar top-navbar navbar-expand-md navbar-dark" style="background: transparent !important;">
        <div class="navbar-header">
            <!-- This is for the sidebar toggle which is visible on mobile only -->
            <a class="nav-toggler d-block d-md-none" href="javascript:void(0)">
                <i class="ti-menu ti-close"></i>
            </a>
            <!-- ============================================================== -->
            <!-- Logo -->
            <!-- ============================================================== -->
            <div class="navbar-brand">
                <a href="index.html" class="logo">
                    <!-- Logo icon -->
                    <b class="logo-icon">
                        <!--You can put here icon as well // <i class="wi wi-sunset"></i> //-->
                        <!-- Dark Logo icon -->
                        <img src="/mendy-admin/package/assets/images/logo-icon.png" alt="homepage" class="dark-logo" />
                        <!-- Light Logo icon -->
                        <img src="/mendy-admin/package/assets/images/logo-light-icon.png" alt="homepage" class="light-logo" />
                    </b>
                    <!--End Logo icon -->
                    <!-- Logo text -->
                    <span class="logo-text">
                        <!-- dark Logo text -->
                        <img src="/mendy-admin/package/assets/images/logo-text.png" alt="homepage" class="dark-logo" />
                        <!-- Light Logo text -->
                        <img src="/mendy-admin/package/assets/images/logo-light-text.png" class="light-logo" alt="homepage" />
                    </span>
                </a>
                <a class="sidebartoggler d-none d-lg-block" href="javascript:void(0)" data-sidebartype="mini-sidebar">
                    <i data-feather="menu"></i>
                </a>
            </div>
            <!-- ============================================================== -->
            <!-- End Logo -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Toggle which is visible on mobile only -->
            <!-- ============================================================== -->
            <a class="topbartoggler d-block d-md-none" href="javascript:void(0)" data-toggle="collapse"
               data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
               aria-label="Toggle navigation">
                <i class="ti-more"></i>
            </a>
        </div>
        <!-- ============================================================== -->
        <!-- End Logo -->
        <!-- ============================================================== -->
        <div class="navbar-collapse collapse" id="navbarSupportedContent">
            <!-- ============================================================== -->
            <!-- toggle and nav items -->
            <!-- ============================================================== -->
            <ul class="navbar-nav float-left mr-auto">
                <!-- ============================================================== -->

                <li class="nav-item search-box">
                    <a class="nav-link waves-effect waves-dark" href="javascript:void(0)">
                        <i data-feather="search"></i>
                    </a>
                    <form class="app-search position-absolute">
                        <input type="text" class="form-control" placeholder="Search &amp; enter">
                        <a class="srh-btn">
                            <i class="ti-close"></i>
                        </a>
                    </form>
                </li>
            </ul>
            <!-- ============================================================== -->
            <!-- Right side toggle and nav items -->
            <!-- ============================================================== -->
            <ul class="navbar-nav float-right">

                @await Component.InvokeAsync("_UserLayoutTopbarProfileInformationComponentPartial")


                @await Component.InvokeAsync("_UserLayoutTopbarMessageComponentPartial")

            </ul>
        </div>
    </nav>
</header>