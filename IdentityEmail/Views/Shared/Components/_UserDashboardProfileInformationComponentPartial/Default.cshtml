@model UserEditDto

<style>
    .profile-card-dark {
        background: radial-gradient(circle at top left, #1e293b, #0f172a);
        border: 1px solid rgba(99, 102, 241, 0.3);
        border-radius: 1rem;
        box-shadow: 0 10px 30px rgba(99, 102, 241, 0.2);
        overflow: hidden;
    }

    .profile-card-header-dark {
        position: relative;
        height: 150px;
        background: linear-gradient(135deg, #4c1d95, #6b21a8, #7c3aed);
        overflow: hidden;
    }

        .profile-card-header-dark::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -20%;
            width: 300px;
            height: 300px;
            background: rgba(167, 139, 250, 0.2);
            border-radius: 50%;
        }

    .profile-avatar-wrapper {
        position: relative;
        margin-top: -65px;
        margin-bottom: 1rem;
    }

    .profile-avatar-dark {
        width: 130px;
        height: 130px;
        border-radius: 50%;
        border: 4px solid #0f172a;
        box-shadow: 0 8px 20px rgba(139, 92, 246, 0.4);
    }

    .profile-name-dark {
        color: #e9d5ff;
        font-size: 1.35rem;
        font-weight: 600;
        margin: 0.75rem 0 0.5rem;
    }

    .profile-email-dark {
        background: rgba(99, 102, 241, 0.15);
        border: 1px solid rgba(99, 102, 241, 0.3);
        color: #c4b5fd;
        padding: 0.4rem 1rem;
        border-radius: 999px;
        font-size: 0.875rem;
        display: inline-block;
        margin-bottom: 0.75rem;
    }

    .profile-about-dark {
        background: rgba(139, 92, 246, 0.1);
        border-left: 3px solid #a78bfa;
        padding: 0.75rem 1rem;
        border-radius: 0.5rem;
        color: #d8b4fe;
        font-size: 0.875rem;
        line-height: 1.5;
        margin: 1rem 1.5rem;
        text-align: left;
    }

    .profile-actions-dark {
        border-top: 1px solid rgba(99, 102, 241, 0.2);
        margin-top: 1rem;
    }

    .profile-action-link-dark {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem;
        color: #c4b5fd;
        text-decoration: none;
        transition: all 0.3s ease;
        font-weight: 500;
        font-size: 0.9rem;
    }

        .profile-action-link-dark:hover {
            background: rgba(139, 92, 246, 0.15);
            color: #e9d5ff;
            text-decoration: none;
        }

        .profile-action-link-dark i {
            width: 18px;
            height: 18px;
            margin-right: 0.5rem;
            color: #a78bfa;
        }

    .profile-divider-dark {
        border-right: 1px solid rgba(99, 102, 241, 0.2);
    }
</style>

<div class="row">
    <div class="col-md-6 col-lg-4">
        <div class="profile-card-dark">
            <div class="profile-card-header-dark"></div>

            <div class="card-body text-center">
                <div class="profile-avatar-wrapper">
                    <img src="~/ImageFiles/@Model.ImageUrl" class="profile-avatar-dark" alt="user">
                </div>

                <h4 class="profile-name-dark">@Model.Name @Model.Surname</h4>

                <span class="profile-email-dark">@Model.Email</span>


                <div class="profile-about-dark">
                    <strong style="color: #e9d5ff;">Hakkında:</strong><br>
                    @Model.About
                </div>

            </div>

            <div class="profile-actions-dark">
                <div class="row text-center">
                    <div class="col-6 profile-divider-dark">
                        <a href="/Message/SendMessage" class="profile-action-link-dark">
                            <i data-feather="message-square"></i>
                            <span>Mesaj Gönder</span>
                        </a>
                    </div>
                    <div class="col-6">
                        <a href="/Profile/UserProfile" class="profile-action-link-dark">
                            <i data-feather="user"></i>
                            <span>Profil</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-8 mt-4 mt-md-0">
        @await Component.InvokeAsync("_UserDashboardOpenAIUserSummaryComponentPartial")
    </div>
</div>