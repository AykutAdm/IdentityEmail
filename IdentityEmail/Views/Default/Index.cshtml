@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>IdentityEmail - Modern E-posta Yönetim Sistemi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/feather-icons@4.28.0/dist/feather.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #0f172a 100%);
            color: #e5e7eb;
            overflow-x: hidden;
        }

        .navbar {
            background: rgba(15, 23, 42, 0.8) !important;
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(99, 102, 241, 0.3);
            padding: 1rem 0;
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: 700;
            background: linear-gradient(90deg, #818cf8, #ec4899);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .nav-link {
            color: #c4b5fd !important;
            font-weight: 500;
            margin: 0 0.5rem;
            transition: all 0.3s ease;
        }

        .nav-link:hover {
            color: #e9d5ff !important;
        }

        .btn-primary-custom {
            background: linear-gradient(90deg, #818cf8, #ec4899);
            border: none;
            color: white;
            padding: 0.75rem 2rem;
            border-radius: 999px;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(129, 140, 248, 0.4);
        }

        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(129, 140, 248, 0.6);
            color: white;
        }

        .btn-outline-custom {
            border: 2px solid #818cf8;
            color: #c4b5fd;
            padding: 0.75rem 2rem;
            border-radius: 999px;
            font-weight: 600;
            background: transparent;
            transition: all 0.3s ease;
        }

        .btn-outline-custom:hover {
            background: rgba(129, 140, 248, 0.1);
            border-color: #a78bfa;
            color: #e9d5ff;
        }

        .hero-section {
            min-height: 90vh;
            display: flex;
            align-items: center;
            padding: 4rem 0;
            position: relative;
            overflow: hidden;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -20%;
            width: 600px;
            height: 600px;
            background: radial-gradient(circle, rgba(129, 140, 248, 0.2) 0%, transparent 70%);
            border-radius: 50%;
            z-index: 0;
        }

        .hero-content {
            position: relative;
            z-index: 1;
        }

        .hero-image-wrapper {
            position: relative;
            z-index: 1;
        }

        .hero-image {
            width: 100%;
            max-width: 600px;
            height: auto;
            border-radius: 1.5rem;
            box-shadow: 0 20px 60px rgba(129, 140, 248, 0.3);
            border: 2px solid rgba(129, 140, 248, 0.3);
            transition: transform 0.3s ease;
        }

        .hero-image:hover {
            transform: scale(1.02);
        }

        .feature-image-wrapper {
            margin-bottom: 1.5rem;
            height: 200px;
            min-height: 200px;
            overflow: hidden;
            border-radius: 1rem;
            background: linear-gradient(135deg, rgba(129, 140, 248, 0.2), rgba(236, 72, 153, 0.2));
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .feature-image {
            width: 100%;
            height: 100%;
            object-fit: contain;
            object-position: center center;
        }

        .hero-title {
            font-size: 3.5rem;
            font-weight: 800;
            line-height: 1.2;
            margin-bottom: 1.5rem;
            background: linear-gradient(90deg, #e9d5ff, #c4b5fd, #a78bfa);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .hero-subtitle {
            font-size: 1.25rem;
            color: #9ca3af;
            margin-bottom: 2rem;
            line-height: 1.6;
        }

        .feature-card {
            background: rgba(30, 41, 59, 0.6);
            border: 1px solid rgba(99, 102, 241, 0.3);
            border-radius: 1rem;
            padding: 2rem;
            transition: all 0.3s ease;
            height: 100%;
            backdrop-filter: blur(10px);
        }

        .feature-card:hover {
            transform: translateY(-5px);
            border-color: rgba(129, 140, 248, 0.6);
            box-shadow: 0 10px 30px rgba(129, 140, 248, 0.2);
        }

        .feature-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #818cf8, #ec4899);
            border-radius: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1.5rem;
        }

        .feature-icon i {
            width: 30px;
            height: 30px;
            color: white;
        }

        .feature-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #e9d5ff;
            margin-bottom: 0.75rem;
        }

        .feature-desc {
            color: #9ca3af;
            line-height: 1.6;
        }

        .stats-section {
            background: rgba(15, 23, 42, 0.5);
            padding: 4rem 0;
            margin-top: 4rem;
        }

        .stat-card {
            text-align: center;
            padding: 2rem;
        }

        .stat-number {
            font-size: 3rem;
            font-weight: 800;
            background: linear-gradient(90deg, #818cf8, #ec4899);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .stat-label {
            color: #9ca3af;
            font-size: 1rem;
            margin-top: 0.5rem;
        }

        .footer {
            background: rgba(15, 23, 42, 0.8);
            border-top: 1px solid rgba(99, 102, 241, 0.3);
            padding: 2rem 0;
            margin-top: 4rem;
        }

        .footer-text {
            color: #9ca3af;
            text-align: center;
        }

        @@media (max-width: 768px) {
            .hero-title {
                font-size: 2.5rem;
            }

            .hero-subtitle {
                font-size: 1.1rem;
            }
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/Default/Index/">IdentityEmail</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#features">Özellikler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Login/UserLogin">Giriş Yap</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Register/CreateUser">Kayıt Ol</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 hero-content">
                    <h1 class="hero-title">
                        Modern E-posta Yönetim Sistemi
                    </h1>
                    <p class="hero-subtitle">
                        AI destekli akıllı e-posta yönetimi ile mesajlarınızı daha verimli organize edin. 
                        Kategorilendirme, önceliklendirme ve otomatik cevap önerileri ile işlerinizi kolaylaştırın.
                    </p>
                    <div class="d-flex gap-3 flex-wrap">
                        <a href="/Register/CreateUser" class="btn btn-primary-custom">
                            Hemen Başla
                        </a>
                        <a href="#features" class="btn btn-outline-custom">
                            Özellikleri Keşfet
                        </a>
                    </div>
                </div>
                <div class="col-lg-6 text-center mt-5 mt-lg-0 hero-image-wrapper">
                    <img src="https://www.techspot.com/images2/downloads/topdownload/2020/10/2020-10-06-ts3_thumbs-7f5.png"
                         alt="Email Management" 
                         class="hero-image">
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="mb-3" style="font-size: 2.5rem; font-weight: 700; color: #e9d5ff;">
                    Özellikler
                </h2>
                <p class="text-muted" style="color: #9ca3af; font-size: 1.1rem;">
                    Size özel tasarlanmış güçlü özellikler
                </p>
            </div>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-image-wrapper">
                            <img src="https://images.unsplash.com/photo-1677442136019-21780ecad995?w=400&q=80" 
                                 alt="AI Analysis" 
                                 class="feature-image">
                        </div>
                        <div class="feature-icon">
                            <i data-feather="cpu"></i>
                        </div>
                        <h3 class="feature-title">AI Destekli Analiz</h3>
                        <p class="feature-desc">
                            OpenAI ile mesaj aktivitelerinizi analiz edin ve akıllı öneriler alın.
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-image-wrapper">
                            <img src="~/featureimages/14.png"
                                 alt="Categorization" 
                                 class="feature-image">
                        </div>
                        <div class="feature-icon">
                            <i data-feather="tag"></i>
                        </div>
                        <h3 class="feature-title">Otomatik Kategorilendirme</h3>
                        <p class="feature-desc">
                            Gemini AI ile mesajlarınızı otomatik olarak kategorilere ayırın.
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-image-wrapper">
                            <img src="~/featureimages/14.png"
                                 alt="Priority" 
                                 class="feature-image">
                        </div>
                        <div class="feature-icon">
                            <i data-feather="zap"></i>
                        </div>
                        <h3 class="feature-title">Önceliklendirme</h3>
                        <p class="feature-desc">
                            Önemli mesajları otomatik olarak tespit edin ve önceliklendirin.
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-image-wrapper">
                            <img src="~/featureimages/13.png"
                                 alt="Smart Replies" 
                                 class="feature-image">
                        </div>
                        <div class="feature-icon">
                            <i data-feather="message-square"></i>
                        </div>
                        <h3 class="feature-title">Akıllı Cevap Önerileri</h3>
                        <p class="feature-desc">
                            Mesaj içeriğine göre otomatik cevap önerileri alın ve zaman kazanın.
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-image-wrapper">
                            <img src="~/featureimages/12.png"
                                 alt="Filtering" 
                                 class="feature-image">
                        </div>
                        <div class="feature-icon">
                            <i data-feather="filter"></i>
                        </div>
                        <h3 class="feature-title">Gelişmiş Filtreleme</h3>
                        <p class="feature-desc">
                            Kategorilere göre mesajlarınızı filtreleyin ve hızlıca bulun.
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-image-wrapper">
                            <img src="~/featureimages/11.png" 
                                 alt="Dashboard" 
                                 class="feature-image">
                        </div>
                        <div class="feature-icon">
                            <i data-feather="bar-chart-2"></i>
                        </div>
                        <h3 class="feature-title">Dashboard İstatistikleri</h3>
                        <p class="feature-desc">
                            Mesaj aktivitelerinizi görselleştirin ve analiz edin.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats-section">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-6">
                    <div class="stat-card">
                        <div class="stat-number">100%</div>
                        <div class="stat-label">Güvenli</div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="stat-card">
                        <div class="stat-number">AI</div>
                        <div class="stat-label">Destekli</div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="stat-card">
                        <div class="stat-number">7/24</div>
                        <div class="stat-label">Erişim</div>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="stat-card">
                        <div class="stat-number">∞</div>
                        <div class="stat-label">Mesaj</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p class="footer-text mb-0">
                &copy; 2026 IdentityEmail - Tüm hakları saklıdır.
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons@4.28.0/dist/feather.min.js"></script>
    <script>
        feather.replace();
    </script>
</body>
</html>
