@model List<SentMessage>
@{
    ViewData["Title"] = "SentMessage";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<style>
    .message-dark-wrapper {
        background-color: #030712;
        min-height: 100vh;
    }

    .message-dark-wrapper .page-breadcrumb {
        background: linear-gradient(90deg, #030712 0%, #020617 40%, #030712 100%);
        border-bottom: 1px solid rgba(148, 163, 184, 0.25);
    }

    .message-dark-wrapper .page-title,
    .message-dark-wrapper .breadcrumb .breadcrumb-item a,
    .message-dark-wrapper .breadcrumb .breadcrumb-item.active,
    .message-dark-wrapper .breadcrumb-item + .breadcrumb-item::before {
        color: #e5e7eb;
    }

    .message-dark-wrapper small.text-muted {
        color: #9ca3af !important;
    }

    .message-dark-wrapper .card {
        background-color: #030712;
        border-color: rgba(148, 163, 184, 0.35);
    }

    .email-table {
        font-size: 0.875rem;
    }

    .email-table thead th {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.04em;
        color: #99a1b7;
        border-bottom: 0;
        background-color: transparent;
        white-space: nowrap;
    }

    .email-table tbody tr {
        transition: background-color 0.15s ease, box-shadow 0.15s ease;
    }

    .email-table tbody tr:hover {
        background-color: #030712;
        box-shadow: 0 2px 12px rgba(15, 23, 42, 0.6);
    }

    .email-cell {
        vertical-align: middle !important;
        padding-top: 0.75rem;
        padding-bottom: 0.75rem;
    }

    .email-receiver {
        font-weight: 600;
        color: #e5e7eb;
        max-width: 180px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .email-subject {
        font-weight: 500;
        color: #c7d2fe;
        max-width: 280px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .email-snippet {
        font-size: 0.875rem;
        color: #9ca3af;
        max-width: 340px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .email-date {
        white-space: nowrap;
        font-size: 0.8rem;
        color: #9ca3af;
    }

    .email-status-read {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.15rem 0.7rem;
        border-radius: 999px;
        font-size: 0.75rem;
        font-weight: 600;
        white-space: nowrap;
        background-color: rgba(34, 197, 94, 0.25);
        color: #86efac;
    }

    .email-status-unread {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.15rem 0.7rem;
        border-radius: 999px;
        font-size: 0.75rem;
        font-weight: 600;
        white-space: nowrap;
        background-color: rgba(148, 163, 184, 0.25);
        color: #cbd5e1;
    }

    .email-badge-category,
    .email-badge-priority {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.15rem 0.7rem;
        border-radius: 999px;
        font-size: 0.75rem;
        font-weight: 600;
        white-space: nowrap;
    }

    .email-badge-category {
        background-color: rgba(129, 140, 248, 0.25);
        color: #c7d2fe;
    }

    .email-badge-priority {
        background-color: rgba(248, 113, 113, 0.35);
        color: #fee2e2;
    }

    .email-actions {
        gap: 0.35rem;
    }

    .email-action-btn {
        width: 40px;
        height: 40px;
        border-radius: 999px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: none;
        font-size: 1rem;
        transition: background-color 0.15s ease, transform 0.1s ease, box-shadow 0.15s ease;
        line-height: 1;
    }

    .email-action-view {
        background-color: rgba(129, 140, 248, 0.35);
        color: #e0e7ff;
    }

    .email-action-delete {
        background-color: rgba(239, 68, 68, 0.45);
        color: #fee2e2;
    }

    .email-action-btn:hover {
        text-decoration: none;
        transform: translateY(-1px);
        box-shadow: 0 2px 6px rgba(15, 23, 42, 0.12);
    }

    .sent-stats-card {
        background: linear-gradient(135deg, rgba(129, 140, 248, 0.15), rgba(236, 72, 153, 0.15));
        border: 1px solid rgba(129, 140, 248, 0.3);
        border-radius: 0.75rem;
        padding: 1.25rem 1.5rem;
        margin-bottom: 1.5rem;
    }

    .sent-stats-card h5 {
        font-size: 0.85rem;
        color: #9ca3af;
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .sent-stats-card .stat-number {
        font-size: 2rem;
        font-weight: 700;
        color: #e5e7eb;
    }

    .sent-stats-card .stat-label {
        font-size: 0.85rem;
        color: #c7d2fe;
    }
</style>

<div class="page-wrapper message-dark-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex align-items-center justify-content-between">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-1">
                            <li class="breadcrumb-item">
                                <a href="/" class="link">Home</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Gönderilen Mesajlar</li>
                        </ol>
                    </nav>
                    <h4 class="page-title mb-0">Gönderilen Mesajlar</h4>
                    <small class="text-muted">
                        Toplam @Model.Count gönderilmiş mesaj
                    </small>
                </div>
                <div>
                    <a href="/Message/SendMessage" class="btn btn-primary">
                        <i class="mdi mdi-plus mr-1"></i> Yeni Mesaj
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="sent-stats-card">
                            <h5>Toplam Gönderilen</h5>
                            <div class="stat-number">@Model.Count</div>
                            <div class="stat-label">Mesaj</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="sent-stats-card">
                            <h5>Okundu</h5>
                            <div class="stat-number">@Model.Count(x => x.IsRead)</div>
                            <div class="stat-label">Mesaj</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="sent-stats-card">
                            <h5>Okunmadı</h5>
                            <div class="stat-number">@Model.Count(x => !x.IsRead)</div>
                            <div class="stat-label">Mesaj</div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm border-0">
                    <div class="card-body border-bottom py-3 d-flex flex-wrap align-items-center">
                        <div class="custom-control custom-checkbox mr-3">
                            <input type="checkbox" class="custom-control-input" id="selectAll">
                            <label class="custom-control-label" for="selectAll">Tümünü seç</label>
                        </div>

                        <div class="input-group input-group-sm ml-auto" style="max-width: 260px;">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-light border-right-0">
                                    <i class="mdi mdi-magnify"></i>
                                </span>
                            </div>
                            <input type="text" class="form-control border-left-0" placeholder="Gönderilenlerde ara...">
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover table-borderless align-middle mb-0 email-table">
                            <thead class="thead-light">
                                <tr>
                                    <th style="width:40px;"></th>
                                    <th>Alıcı</th>
                                    <th>Konu</th>
                                    <th>Mesaj Özeti</th>
                                    <th>Kategori</th>
                                    <th>Öncelik</th>
                                    <th style="width:100px;">Durum</th>
                                    <th style="width:120px;">Tarih</th>
                                    <th style="width:110px;" class="text-right">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="7" class="text-center text-muted py-5">
                                            <i class="mdi mdi-email-send-outline" style="font-size: 3rem; opacity: 0.3;"></i>
                                            <p class="mt-2">Henüz gönderilmiş mesaj bulunmuyor.</p>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var item in Model.OrderByDescending(x => x.SendDate))
                                    {
                                        <tr>
                                            <td class="email-cell">
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input" id="msg-@item.SentMessageId">
                                                    <label class="custom-control-label" for="msg-@item.SentMessageId"></label>
                                                </div>
                                            </td>
                                            <td class="email-cell">
                                                <span class="email-receiver" title="@item.ReceiverEmail">
                                                    <i class="mdi mdi-account-arrow-right mr-1" style="color: #818cf8;"></i>
                                                    @item.ReceiverEmail
                                                </span>
                                            </td>
                                            <td class="email-cell">
                                                <span class="email-subject" title="@item.Subject">
                                                    @item.Subject
                                                </span>
                                            </td>
                                            <td class="email-cell">
                                                <span class="email-snippet" title="@item.MessageDetail">
                                                    @item.MessageDetail.Substring(0,40)
                                                </span>
                                            </td>

                                            <td class="email-cell">
                                                <span class="email-badge-category">@item.Category</span>
                                            </td>

                                            <td class="email-cell">
                                                <span class="email-badge-priority">@item.Priority</span>
                                            </td>

                                            <td class="email-cell">
                                                @if (item.IsRead)
                                                {
                                                    <span class="email-status-read">
                                                        <i class="mdi mdi-check-circle mr-1"></i> Okundu
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="email-status-unread">
                                                        <i class="mdi mdi-circle-outline mr-1"></i> Okunmadı
                                                    </span>
                                                }
                                            </td>
                                            <td class="email-cell email-date">
                                                @item.SendDate.ToString("dd.MM.yyyy")
                                            </td>
                                            <td class="text-right email-cell">
                                                <div class="d-inline-flex email-actions">
                                                    <a href="/Message/SentMessageDetail/@item.SentMessageId"
                                                       class="email-action-btn email-action-view"
                                                       title="Mesaj detayı">
                                                        <i class="mdi mdi-email-open-outline"></i>
                                                    </a>
                                                    <a href="/Message/DeleteSentMessage/@item.SentMessageId"
                                                       class="email-action-btn email-action-delete"
                                                       title="Sil">
                                                        <i class="mdi mdi-delete"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <span class="text-muted small">
                            @Model.Count mesaj listeleniyor
                        </span>
                        <nav aria-label="Page navigation">
                            <ul class="pagination pagination-sm mb-0">
                                <li class="page-item disabled"><a class="page-link" href="javascript:void(0)">Önceki</a></li>
                                <li class="page-item active"><a class="page-link" href="javascript:void(0)">1</a></li>
                                <li class="page-item"><a class="page-link" href="javascript:void(0)">2</a></li>
                                <li class="page-item"><a class="page-link" href="javascript:void(0)">Sonraki</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
