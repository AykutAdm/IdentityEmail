@model Message
@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<style>
    .message-dark-wrapper {
        background-color: #030712;
        min-height: 100vh;
    }

    .message-dark-wrapper .page-breadcrumb {
        background: linear-gradient(90deg, #030712 0%, #020617 40%, #030712 100%);
        border-bottom: 1px solid rgba(148, 163, 184, 0.25);
    }

    .message-dark-wrapper .page-title,
    .message-dark-wrapper .breadcrumb .breadcrumb-item a,
    .message-dark-wrapper .breadcrumb .breadcrumb-item.active,
    .message-dark-wrapper .breadcrumb-item + .breadcrumb-item::before {
        color: #e5e7eb;
    }

    .message-dark-wrapper small.text-muted {
        color: #9ca3af !important;
    }

    .message-detail-card {
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(15, 23, 42, 0.7);
        background: radial-gradient(circle at top left, #111827, #030712);
        border: 1px solid rgba(55, 65, 81, 0.8);
    }

    .message-detail-toolbar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 1.25rem;
        border-bottom: 1px solid rgba(55, 65, 81, 0.9);
        background: linear-gradient(90deg, #020617 0%, #0b1120 40%, #020617 100%);
    }

    .message-detail-header {
        padding: 1rem 1.25rem 0.75rem;
    }

    .message-detail-title {
        font-size: 1.125rem;
        font-weight: 600;
        color: #e5e7eb;
        margin-bottom: 0.35rem;
    }

    .message-detail-meta {
        font-size: 0.85rem;
        color: #9ca3af;
    }

    .message-detail-addresses {
        padding: 0.5rem 1.25rem 0.75rem;
        border-top: 1px solid rgba(55, 65, 81, 0.9);
        border-bottom: 1px solid rgba(55, 65, 81, 0.9);
        background-color: #030712;
    }

    .message-detail-addresses strong {
        color: #e5e7eb;
    }

    .message-detail-body {
        padding: 1.25rem 1.5rem 1.75rem;
    }

    .message-detail-text {
        white-space: pre-wrap;
        font-size: 0.95rem;
        line-height: 1.6;
        color: #e5e7eb;
        text-align: left;
    }

    .message-detail-footer {
        padding: 1rem 1.25rem 1.25rem;
        border-top: 1px dashed rgba(55, 65, 81, 0.9);
        background-color: #020617;
        font-size: 0.85rem;
    }

    .message-detail-footer a {
        font-weight: 500;
    }

    .message-detail-chip-group {
        display: flex;
        flex-wrap: wrap;
        gap: 0.35rem;
        align-items: center;
    }

    .message-detail-badge-category,
    .message-detail-badge-priority {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.15rem 0.7rem;
        border-radius: 999px;
        font-size: 0.75rem;
        font-weight: 600;
        white-space: nowrap;
    }

    .message-detail-badge-category {
        background-color: rgba(129, 140, 248, 0.35);
        color: #e0e7ff;
    }

    .message-detail-badge-priority {
        background-color: rgba(248, 113, 113, 0.4);
        color: #fee2e2;
    }

    .message-detail-toolbar .btn {
        border-radius: 999px;
        border: none;
    }

    .message-detail-toolbar .btn-light {
        background-color: rgba(15, 23, 42, 0.7);
        color: #e5e7eb;
    }

    .message-detail-toolbar .btn-light:hover {
        background-color: rgba(30, 64, 175, 0.9);
        color: #ffffff;
    }

    .message-detail-delete-btn {
        background-color: rgba(239, 68, 68, 0.9);
        color: #fef2f2;
        padding: 0.35rem 0.95rem;
    }

    .message-detail-delete-btn:hover {
        background-color: rgba(220, 38, 38, 1);
        color: #ffffff;
    }
</style>

<div class="page-wrapper message-dark-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex align-items-center justify-content-between">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-1">
                            <li class="breadcrumb-item">
                                <a href="/Message/Inbox" class="link">Mailbox</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Mesaj Detayı</li>
                        </ol>
                    </nav>
                    <h4 class="page-title mb-0">@Model.Subject</h4>
                    <small class="text-muted">
                        @Model.SendDate.ToString("dd.MM.yyyy HH:mm")
                    </small>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-8">
                <div class="right-part mail-details">
                    <div class="card message-detail-card bg-white">
                        <div class="message-detail-toolbar">
                            <div class="d-flex align-items-center">
                                <button type="button" id="back_to_inbox" class="btn btn-light btn-circle mr-2" title="Gelen kutusuna dön">
                                    <i class="mdi mdi-arrow-left text-secondary"></i>
                                </button>
                                <span class="text-muted small">Mesaj detayları</span>
                            </div>
                            <div class="btn-group" role="group" aria-label="Message actions">
                                <button type="button" class="btn btn-light btn-sm" title="Yanıtla">
                                    <i class="mdi mdi-reply"></i>
                                </button>
                                <button type="button" class="btn btn-light btn-sm" title="Spam olarak işaretle">
                                    <i class="mdi mdi-alert-octagon"></i>
                                </button>
                                <button type="button" class="btn message-detail-delete-btn btn-sm" title="Sil">
                                    <i class="mdi mdi-delete"></i>
                                </button>
                            </div>
                        </div>

                        <div class="message-detail-header">
                            <div class="d-flex justify-content-between align-items-start flex-wrap">
                                <div class="mb-2 mb-sm-0">
                                    <div class="message-detail-title">@Model.Subject</div>
                                    <div class="message-detail-meta">
                                        @Model.SendDate.ToString("dd MMMM yyyy HH:mm")
                                    </div>
                                </div>
                                <div class="message-detail-chip-group">
                                    <span class="message-detail-badge-category">
                                        @Model.Category
                                    </span>
                                    <span class="message-detail-badge-priority">
                                        @Model.Priority
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="message-detail-addresses">
                            <div class="d-flex flex-column flex-sm-row align-items-sm-center justify-content-between">
                                <div>
                                    <strong>@Model.SenderEmail</strong>
                                    <span class="text-muted"> → </span>
                                    <span class="text-muted">to</span>
                                    <span class="ml-1">@Model.ReceiverEmail</span>
                                </div>
                            </div>
                        </div>

                        <div class="message-detail-body">
                            <div class="message-detail-text" id="messageContent">
                                @Html.Raw(Model.MessageDetail)
                            </div>
                        </div>

                        <div class="message-detail-footer">
                            <p class="mb-2 text-muted">
                                Bu mesaja hızlıca yanıt vermek için aşağıdaki butonları kullanabilirsiniz.
                            </p>
                            <a href="javascript:void(0)" class="mr-3">Reply</a>
                            <a href="javascript:void(0)">Forward</a>
                            
                            <div class="ai-reply-suggestion mt-4 p-4" style="background: rgba(139, 92, 246, 0.1); border-left: 4px solid #a78bfa; border-radius: 0.75rem;">
                                <div class="d-flex align-items-center mb-3">
                                    <i data-feather="cpu" style="width: 22px; height: 22px; color: #a78bfa;" class="mr-2"></i>
                                    <strong style="color: #e9d5ff; font-size: 1.05rem;">AI Cevap Önerisi</strong>
                                </div>
                                <p class="mb-0" style="color: #d8b4fe; font-size: 1rem; line-height: 1.7;">
                                    @ViewBag.ReplySuggestion
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- This Page JS -->
<script src="/mendy-admin/package/assets/libs/summernote/dist/summernote-bs4.min.js"></script>